<h1>List of all tasks</h1>

<% @index_tasks.each do |task| %>
  <input type="checkbox" id=<%task.id%> name=<%task.title%>>
  <%= link_to "#{task.title}", task_path(task.id) %>
  <%= link_to "Delete",
            destroy_task_path(task.id),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  <br>
<% end %>
